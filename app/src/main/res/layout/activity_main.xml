<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:background="@drawable/background_app"
    android:scaleType="fitXY"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_SP"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:layout_marginTop="201dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="casual"
        android:text="Single Player"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_MP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_MP"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="casual"
        android:text="Multiplayer"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_OPT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_SP" />

    <Button
        android:id="@+id/button_OPT"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="casual"
        android:text="Options"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_ABT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_MP" />

    <Button
        android:id="@+id/button_ABT"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:layout_marginBottom="117dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="casual"
        android:text="About"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_OPT" />

    <TextView
        android:id="@+id/Title_MainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Ballio"
        android:textAlignment="center"
        android:textColor="#FF9100"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_SP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>